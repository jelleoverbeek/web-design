    <section class="section-timeline">
        <h1>Tijdlijn</h1>

        <div class="timeline">
            <article class="timeline-item">
                <div class="timeline-shape">
                    <button class="btn-round">
                        <img src="assets/img/chevron-up.svg">
                    </button>
                </div>
                <div class="timeline-item-content timeline-previous">
                    <a href="#">
                        Week eerder laden<br>
                        <small>16 april t/m 20 april</small>
                    </a>
                </div>
            </article>

            {% for day in days %}
                <article class="timeline-item{% if day.hidden %} hidden{% endif %}">
                    <div class="timeline-shape">
                        <div class="timeline-dot"></div>
                    </div>
                    <div class="timeline-item-content">
                        <h3>{{ day.dateName }} <time>({{ day.date }})</time></h3>

                        {% for course in day.courses  %}
                        <div class="card{% if course.active %} active{% endif %}">
                            <header>
                                <div class="titles">
                                    <h2>{{ course.title }}</h2>
                                    <h4>{{ course.assignment }}</h4>
                                </div>
                                <ul class="meta">
                                    <li class="time">{{ course.time }}</li>
                                    <li class="location">{{ course.location }}</li>
                                </ul>
                            </header>

                            <ul class="meta">
                                {% for link in course.links %}
                                    <li class="link"><a href="#">{{ link.title }} {% if link.deadline %}<span class="deadline">{{ link.deadline }}</span>{% endif %}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endfor %}
                    </div>
                </article>
